@model QuanLyDangKyNgayLD.Models.SinhVien
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Areas/Student/Views/Shared/ViewSinhvien.cshtml";
}

<div class="container student-dashboard mt-5">
    <div class="row g-4">
        <!-- Cột trái: Thông tin sinh viên -->
        <div class="col-lg-4">
            <div class="card info-card h-100">
                <div class="card-body text-center">
                    <h4 class="mb-4">Thông tin sinh viên</h4>

                    <img id="avatarImg" src="~/image/Avarta.png"
                         class="avatar-img rounded-circle mb-3"
                         alt="Avatar"
                         style="width:120px;height:120px;object-fit:cover;" />


                    <a href="@Url.Action("Detail","MainSinhVien", new { area="Student" })"
                       class="d-block mb-4 text-primary fw-medium">
                        Xem chi tiết
                    </a>

                    <ul class="list-group list-group-flush" id="studentInfo">
                        <li class="list-group-item"><strong>MSSV:</strong> <span id="mssv">...</span></li>
                        <li class="list-group-item"><strong>Họ và Tên:</strong> <span id="hoten">...</span></li>
                        <li class="list-group-item"><strong>Email:</strong> <span id="email">...</span></li>
                        <li class="list-group-item"><strong>Vai trò:</strong> <span id="vaitro">...</span></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- Cột phải: Các chức năng -->
        <div class="col-lg-8">
            <div class="row g-4">
                <!-- Đăng Ký Lao Động -->
                <div class="col-md-4 col-sm-6">
                    <a href="@Url.Action("Index", "StudentRegisterWord", new { area = "Student" })"
                       class="func-card text-white d-block">
                        <h6 class="fw-bold mb-3">Đăng Ký Lao Động</h6>
                        <img src="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/sinhvien/Create.png"
                             class="func-icon" alt="Đăng Ký Lao Động" />
                    </a>
                </div>

                <!-- Thống kê -->
                <div class="col-md-4 col-sm-6">
                    <a href="@Url.Action("Index","StudentTK",new{area="Student"})" class="func-card text-white d-block">
                        <h6 class="fw-bold mb-3">Thống Kê</h6>
                        <img src="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/sinhvien/BAOCAO.png" class="func-icon" alt="Thống kê" />
                    </a>
                </div>

                <!-- Lịch Lao Động -->
                <div class="col-md-4 col-sm-6">
                    <a href="@Url.Action("Index","StudentListDay",new{area="Student"})" class="func-card text-white d-block">
                        <h6 class="fw-bold mb-3">Lịch Lao Động</h6>
                        <img src="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/sinhvien/icons8-calendar.gif" class="func-icon" alt="Lịch lao động" />
                    </a>
                </div>

                <!-- Điểm Danh -->
                <div class="col-md-4 col-sm-6">
                    <a href="@Url.Action("Index", "StudentCheckDay", new { area = "Student" })"
                       class="func-card text-white d-block">
                        <h6 class="fw-bold mb-3">Điểm Danh Lao Động</h6>
                        <img src="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/sinhvien/Duyet1.png" class="func-icon" alt="Điểm danh" />
                    </a>
                </div>

                <!-- Thông báo -->
                <div class="col-md-4 col-sm-6">
                    <a href="javascript:void(0);"
                       class="func-card text-white d-block"
                       data-bs-toggle="modal"
                       data-bs-target="#modalThongBao">
                        <h6 class="fw-bold mb-3">Thông báo</h6>
                        <img src="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/sinhvien/icons8-bell.gif" class="func-icon" alt="Thông báo" />
                    </a>

                </div>

                <!-- Xác nhận hoàn thành -->
                @*<div class="col-md-4 col-sm-6">
                        <a href="~/HTML/XacNhanHoanThanh.html" class="func-card text-white d-block">
                            <h6 class="fw-bold mb-3">Xác nhận hoàn thành</h6>
                            <img src="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/sinhvien/Duyet.png" class="func-icon" alt="Xác nhận" />
                        </a>
                    </div>*@
            </div>
        </div>
    </div>
</div>
<!-- Modal Thông Báo -->
<div class="modal fade" id="modalThongBao" tabindex="-1" aria-labelledby="modalThongBaoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="modalThongBaoLabel">Danh sách thông báo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                <table class="table table-bordered table-hover text-center">
                    <thead class="table-light">
                        <tr>
                            <th>STT</th>
                            <th>Tiêu đề</th>
                            <th>Nội dung</th>
                            <th>Thời gian</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td colspan="4" class="text-muted">Chưa có thông báo gì hết</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>






<script src="~/Areas/Student/Content/Js/StudentMain/StudentMain.js"></script>