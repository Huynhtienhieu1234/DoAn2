@model QuanLyDangKyNgayLD.Models.SinhVien
@{
    ViewBag.Title = "Cập nhật thông tin sinh viên";
    Layout = "~/Areas/Student/Views/Shared/ViewSinhvien.cshtml";
}

<h3>Bổ sung thông tin sinh viên</h3>

<form id="updateForm">
    @Html.AntiForgeryToken()
    <div class="form-group mb-2">
        <label>Họ tên</label>
        <input type="text" name="HoTen" value="@Model.HoTen" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Email</label>
        <input type="email" name="Email" value="@Model.Email" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Ngày sinh</label>
        <input type="date" name="NgaySinh" value="@(Model.NgaySinh?.ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Quê quán</label>
        <input type="text" name="QueQuan" value="@Model.QueQuan" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Giới tính</label>
        <input type="text" name="GioiTinh" value="@Model.GioiTinh" class="form-control" />
    </div>
    <div class="form-group mb-2">
        <label>Số điện thoại</label>
        <input type="text" name="SoDienThoaiSinhVien" value="@Model.SoDienThoaiSinhVien" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu thông tin</button>
</form>

<!-- Toast container -->
<div class="toast-container position-fixed bottom-0 end-0 p-3" id="toastContainer"></div>

<script src="~/Areas/Student/Content/Js/StudentRegister.js"></script>



