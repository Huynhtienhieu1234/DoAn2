@{
    ViewBag.Title = "Thống Kê Lao Động";
    Layout = "~/Areas/Student/Views/Shared/Viewsiderbar.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container mt-4">
    <div class="card shadow mb-4">
        <div class="card-header bg-info text-white text-center py-3">
            <h4 class="mb-0"><i class="fas fa-chart-pie me-2"></i> Thống Kê Lao Động Của Sinh Viên</h4>
        </div>
        <div class="card-body">
            <div class="row text-center mb-4">
                <div class="col-md-3">
                    <h5 class="text-muted">Tổng số đợt</h5>
                    <h3 id="tongDot" class="fw-bold text-primary">0</h3>
                </div>
                <div class="col-md-3">
                    <h5 class="text-muted">Đã duyệt</h5>
                    <h3 id="daDuyet" class="fw-bold text-success">0</h3>
                </div>
                <div class="col-md-3">
                    <h5 class="text-muted">Đã điểm danh</h5>
                    <h3 id="daDiemDanh" class="fw-bold text-warning">0</h3>
                </div>
                <div class="col-md-3">
                    <h5 class="text-muted">Hoàn thành</h5>
                    <h3 id="hoanThanh" class="fw-bold text-primary">0</h3>
                </div>
            </div>

            <!-- Thanh tiến trình -->
            <div class="mb-4">
                <h5 class="text-muted">Tiến độ hoàn thành (Mục tiêu: 18 ngày)</h5>
                <div class="progress" style="height: 30px;">
                    <div id="progressBar" class="progress-bar bg-success fw-bold" role="progressbar"
                         style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="18">
                        0 / 18 ngày
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- BẢNG CHI TIẾT NGÀY LAO ĐỘNG -->
    <div class="card shadow mt-5">
        <div class="card-header bg-secondary text-white text-center py-3">
            <h4 class="mb-0"><i class="fas fa-list me-2"></i> Danh Sách Ngày Lao Động Đã Tham Gia</h4>
        </div>
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-center mb-0">
                    <thead class="table-light">
                        <tr>
                            <th style="width:8%;">STT</th>
                            <th>Buổi</th>
                            <th>Ngày</th>
                            <th>Loại lao động</th>
                            <th>Địa điểm</th>
                        </tr>
                    </thead>
                    <tbody id="chiTietBody">
                        <tr id="loadingChiTiet">
                            <td colspan="5" class="py-5">
                                <div class="spinner-border text-secondary" role="status">
                                    <span class="visually-hidden">Đang tải...</span>
                                </div>
                                <p class="mt-3 text-muted">Đang tải danh sách ngày lao động...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Student/Content/Js/StudentTK/StudentTK.js"></script>
