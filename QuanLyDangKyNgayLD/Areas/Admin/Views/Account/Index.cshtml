@model IEnumerable<QuanLyDangKyNgayLD.Models.TaiKhoan>

@{
    ViewBag.Title = "Trang Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/ViewShare.cshtml";
}
<link href="~/Areas/Content/adminpage.css" rel="stylesheet" type="text/css" />
<!-- THANH CÔNG CỤ -->
<nav class="navbar navbar-expand-lg toolbar">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <!-- BÊN TRÁI: Nút thêm -->
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
                <button class="btn btn-outline-primary btn-sm me-2" id="btnAdd">
                    <i class="fa fa-plus me-1"></i> Thêm tài khoản
                </button>
            </li>
        </ul>

        <!-- BÊN PHẢI: Lọc + Tìm kiếm + Xuất Excel -->
        <form class="d-flex align-items-center" role="search">
            <select id="roleFilter" class="form-select form-select-sm me-2 shadow-sm" style="min-width: 140px;">
                <option value="">-- Lọc theo vai trò --</option>
                <option value="Tất Cả">Tất cả</option>
                <option value="Sinh viên">Sinh viên</option>
                <option value="Lớp phó lao động">Lớp phó lao động</option>
                <option value="Quản lý">Quản lý</option>
                <option value="Admin">Admin</option>
            </select>

            <div class="input-group input-group-sm shadow-sm me-2" style="min-width: 180px;">
                <span class="input-group-text bg-white border-end-0">
                    <i class="fa fa-search text-muted"></i>
                </span>
                <input type="text" id="searchBox" class="form-control border-start-0" placeholder="Tìm kiếm...">
            </div>

            <button class="btn btn-outline-success btn-sm shadow-sm" id="btnExportExcel" type="button">
                <i class="fa fa-file-excel me-1"></i> Xuất Excel
            </button>
        </form>
    </div>
</nav>

<!-- BẢNG DỮ LIỆU -->
<div class="table-responsive shadow-sm rounded-3 bg-white p-2 mt-3">
    <table class="table table-bordered table-hover align-middle text-center mb-0">
        <thead class="table-light">
            <tr>
                <th>STT</th>
                <th>Tên Tài Khoản</th>
                <th>Mật khẩu</th>
                <th>Email</th>
                <th>Loại Tài Khoản</th>
                <th class="action-header">Tác vụ</th>
            </tr>
        </thead>
        <tbody id="accountTableBody">
            @if (Model != null && Model.Any())
            {
                var i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.Username</td>
                        <td>********</td>
                        <td class="email-cell text-truncate" title="@item.Email">@item.Email</td>
                        <td>@item.VaiTro.TenVaiTro</td>
                        <td>
                            <!-- Nút Sửa - Gradient xanh -->
                            <button class="btn btn-sm px-3 me-1 btn-edit"
                                    style="background: linear-gradient(45deg, #007bff, #0056b3); color: white; border: none;"
                                    data-id="@item.TaiKhoan_id"
                                    data-username="@item.Username"
                                    data-email="@item.Email"
                                    data-roleid="@item.VaiTro.VaiTro_id"
                                    data-rolename="@item.VaiTro.TenVaiTro">
                                <i class="fas fa-edit"></i>
                            </button>

                            <!-- Nút Xóa - Gradient đỏ -->
                            <button class="btn btn-sm px-3 me-1 btn-delete"
                                    style="background: linear-gradient(45deg, #dc3545, #a71e2a); color: white; border: none;"
                                    data-id="@item.TaiKhoan_id">
                                <i class="fas fa-trash"></i>
                            </button>

                            <!-- Nút Chi tiết - Gradient cam/vàng -->
                            <button class="btn btn-sm px-3 me-1 btn-detail"
                                    style="background: linear-gradient(45deg, #fd7e14, #e55a00); color: white; border: none;"
                                    data-id="@item.TaiKhoan_id">
                                <i class="fas fa-info-circle"></i>
                            </button>

                            <!-- Nút Đặt lại mật khẩu - Gradient tím -->
                            <button class="btn btn-sm px-3 me-1 btn-reset"
                                    style="background: linear-gradient(45deg, #6f42c1, #4a2d8a); color: white; border: none;"
                                    data-id="@item.TaiKhoan_id">
                                <i class="fas fa-key"></i>
                            </button>
                        </td>
                    </tr>
                    i++;
                }
            }
            else
            {
                <tr>
                    <td colspan="6">Không có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- PHÂN TRANG -->
<div class="d-flex justify-content-between align-items-center mt-3">
    <div id="pagination" class="pagination-container">
        <button class="btn btn-secondary btn-sm me-1" id="prev">&lt;</button>
        <span id="pageNumbers"></span>
        <button class="btn btn-secondary btn-sm ms-1" id="next">&gt;</button>
    </div>
    <div class="fw-bold text-end" id="pageInfo"></div>
</div>

<!-- FORM POPUP CHỈNH SỬA -->
<div class="modal fade" data-bs-backdrop="false" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="editModalLabel">
                    <i class="fa fa-edit me-2"></i>Chỉnh sửa tài khoản
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>

            <div class="modal-body">
                <form id="editForm" method="post" action="/Admin/Account/Edit">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="editId" name="TaiKhoan_id" />

                    <div class="mb-3">
                        <label class="form-label fw-bold">Tên tài khoản</label>
                        <input type="text" class="form-control" id="editUsername" name="Username" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" id="editEmail" name="Email" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Mật khẩu</label>
                        <input type="password" class="form-control" id="editPassword" name="Password" placeholder="Để trống nếu không đổi" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Vai trò</label>
                        <select id="editRole" name="VaiTro_id" class="form-select" required>
                            <option value="">-- Chọn vai trò --</option>
                            @if (ViewBag.VaiTroList != null)
                            {
                                foreach (var vt in ViewBag.VaiTroList)
                                {
                                    <option value="@vt.VaiTro_id">@vt.TenVaiTro</option>
                                }
                            }
                            else
                            {
                                <option value="1">Admin</option>
                                <option value="2">Quản lý</option>
                                <option value="3">Sinh viên</option>
                                <option value="4">Lớp phó lao động</option>
                            }
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                            Hủy
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save me-1"></i> Lưu thay đổi
                        </button>

                    </div>



                </form>
            </div>


        </div>
    </div>
</div>

<!-- DETAILS MODAL -->
<div class="modal fade" data-bs-backdrop="false" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title" id="detailModalLabel"><i class="fa fa-info-circle me-2"></i>Thông tin tài khoản</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>

            <div class="modal-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8" id="detailId"></dd>

                    <dt class="col-sm-4">Tên tài khoản</dt>
                    <dd class="col-sm-8" id="detailUsername"></dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8" id="detailEmail"></dd>

                    <dt class="col-sm-4">Vai trò</dt>
                    <dd class="col-sm-8" id="detailRole"></dd>
                </dl>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>



<script>
    document.addEventListener("DOMContentLoaded", function () {
        // ======== XỬ LÝ NÚT SỬA ========
        document.querySelectorAll(".btn-edit").forEach(btn => {
            btn.addEventListener("click", function () {
                const id = this.dataset.id;
                const username = this.dataset.username;
                const email = this.dataset.email;
                const roleId = this.dataset.roleid;

                document.getElementById("editId").value = id;
                document.getElementById("editUsername").value = username;
                document.getElementById("editEmail").value = email;
                document.getElementById("editRole").value = roleId;

                const modal = new bootstrap.Modal(document.getElementById("editModal"));
                modal.show();
            });
        });

        // ======== XỬ LÝ NÚT XÓA ========
        document.querySelectorAll(".btn-delete").forEach(btn => {
            btn.addEventListener("click", function () {
                const id = this.dataset.id;
                const username = this.closest("tr").cells[1].innerText;

                if (confirm(`Bạn có chắc muốn xóa tài khoản "${username}"?`)) {
                    console.log("Delete ID:", id);
                    // fetch(`/Admin/Account/DeleteAjax/${id}`, { method: "POST" });
                }
            });
        });

        // ======== XỬ LÝ NÚT ĐẶT LẠI MẬT KHẨU ========
        document.querySelectorAll(".btn-reset").forEach(btn => {
            btn.addEventListener("click", function () {
                const id = this.dataset.id;
                const username = this.closest("tr").cells[1].innerText;

                if (confirm(`Đặt lại mật khẩu cho "${username}"?`)) {
                    console.log("Reset password ID:", id);
                    // fetch(`/Admin/Account/ResetPasswordAjax/${id}`, { method: "POST" });
                }
            });
        });

        // ======== XỬ LÝ NÚT CHI TIẾT ========
        document.querySelectorAll(".btn-detail").forEach(btn => {
            btn.addEventListener("click", function () {
                const id = this.dataset.id;
                const row = this.closest("tr");
                const username = row.cells[1].innerText;
                const email = row.cells[3].innerText;
                const role = row.cells[4].innerText;

                document.getElementById("detailId").textContent = id;
                document.getElementById("detailUsername").textContent = username;
                document.getElementById("detailEmail").textContent = email;
                document.getElementById("detailRole").textContent = role;

                const modal = new bootstrap.Modal(document.getElementById("detailModal"));
                modal.show();
            });
        });

        // ======== BIẾN TOÀN CỤC ========
        let allRows = Array.from(document.querySelectorAll("#accountTableBody tr"));
        // Loại bỏ hàng "Không có dữ liệu" nếu có
        allRows = allRows.filter(row => !row.querySelector('td[colspan="6"]'));

        const searchBox = document.getElementById("searchBox");
        const roleFilter = document.getElementById("roleFilter");
        const itemsPerPage = 5;
        let currentPage = 1;
        let currentKeyword = '';
        let currentRole = '';

        // ======== HÀM CHUẨN HÓA CHUỖI ĐỂ SO SÁNH ========
        function normalizeRole(role) {
            return role
                .toLowerCase()
                .replace(/\s+/g, '') // Xóa tất cả khoảng trắng
                .normalize("NFD").replace(/[\u0300-\u036f]/g, ""); // Xóa dấu tiếng Việt
        }

        // ======== HÀM ÁP DỤNG FILTER TỔNG HỢP ========
        function applyFilters() {
            const keyword = currentKeyword.toLowerCase().trim();
            const selectedRole = currentRole;

            allRows.forEach(row => {
                const username = row.cells[1]?.innerText || "";
                const email = row.cells[3]?.innerText || "";
                const role = row.cells[4]?.innerText || "";

                // Kiểm tra tìm kiếm
                const searchMatch = keyword === '' ||
                    username.toLowerCase().includes(keyword) ||
                    email.toLowerCase().includes(keyword) ||
                    role.toLowerCase().includes(keyword);

                // Kiểm tra lọc vai trò - TỰ ĐỘNG HIỂU CÁC ĐỊNH DẠNG KHÁC NHAU
                let roleMatch = true;
                if (selectedRole !== '' && selectedRole !== 'Tất Cả' && selectedRole !== 'all') {
                    // Chuẩn hóa cả hai để so sánh
                    const normalizedSelectedRole = normalizeRole(selectedRole);
                    const normalizedRowRole = normalizeRole(role);

                    // Tự động hiểu các biến thể của vai trò
                    roleMatch = normalizedSelectedRole === normalizedRowRole;

                    // Debug: log để kiểm tra
                    console.log(`Selected: ${normalizedSelectedRole}, Row: ${normalizedRowRole}, Match: ${roleMatch}`);
                }

                // Hiển thị nếu cả hai điều kiện đều thỏa mãn
                row.style.display = (searchMatch && roleMatch) ? "" : "none";
            });

            currentPage = 1;
            renderTable();
        }

        // ======== HÀM HIỂN THỊ DỮ LIỆU PHÂN TRANG ========
        function renderTable() {
            const visibleRows = allRows.filter(row => row.style.display !== "none");
            const totalItems = visibleRows.length;
            const totalPages = Math.ceil(totalItems / itemsPerPage) || 1;

            // Ẩn/hiển thị các hàng theo trang hiện tại
            visibleRows.forEach((row, index) => {
                const startIndex = (currentPage - 1) * itemsPerPage;
                const endIndex = currentPage * itemsPerPage;
                row.style.display = (index >= startIndex && index < endIndex) ? "" : "none";
            });

            // Cập nhật thông tin phân trang
            document.getElementById("pageInfo").textContent = `Trang ${currentPage} / ${totalPages}`;
            document.getElementById("prev").disabled = currentPage === 1;
            document.getElementById("next").disabled = currentPage === totalPages || totalPages === 0;

            // Xử lý trường hợp không có dữ liệu
            const noDataRow = document.querySelector("#accountTableBody tr td[colspan='6']");
            if (noDataRow) {
                noDataRow.parentElement.style.display = totalItems === 0 ? "" : "none";
            }
        }

        // ======== TÌM KIẾM (với debounce và xử lý khoảng trắng) ========
        let searchTimeout;
        searchBox.addEventListener("input", function () {
            clearTimeout(searchTimeout);
            currentKeyword = this.value;
            searchTimeout = setTimeout(() => {
                applyFilters();
            }, 300);
        });

        // ======== HÀM ÁP DỤNG FILTER TỔNG HỢP ========
        function applyFilters() {
            const keyword = currentKeyword.trim(); // Trim khoảng trắng đầu cuối
            const selectedRole = currentRole;

            allRows.forEach(row => {
                const username = row.cells[1]?.innerText || "";
                const email = row.cells[3]?.innerText || "";
                const role = row.cells[4]?.innerText || "";

                // Kiểm tra tìm kiếm - XỬ LÝ KHOẢNG TRẮNG THÔNG MINH
                let searchMatch = true;
                if (keyword !== '') {
                    // Tách từ khóa thành các từ (phân tách bằng khoảng trắng)
                    const searchTerms = keyword.toLowerCase().split(/\s+/).filter(term => term.length > 0);

                    // Kiểm tra mỗi từ khóa trong mỗi trường
                    const searchInFields = [username, email, role];

                    searchMatch = searchTerms.every(term => {
                        return searchInFields.some(field =>
                            field.toLowerCase().includes(term)
                        );
                    });
                }

                // Kiểm tra lọc vai trò - TỰ ĐỘNG HIỂU CÁC ĐỊNH DẠNG KHÁC NHAU
                let roleMatch = true;
                if (selectedRole !== '' && selectedRole !== 'Tất Cả' && selectedRole !== 'all') {
                    // Chuẩn hóa cả hai để so sánh
                    const normalizedSelectedRole = normalizeRole(selectedRole);
                    const normalizedRowRole = normalizeRole(role);

                    // Tự động hiểu các biến thể của vai trò
                    roleMatch = normalizedSelectedRole === normalizedRowRole;
                }

                // Hiển thị nếu cả hai điều kiện đều thỏa mãn
                row.style.display = (searchMatch && roleMatch) ? "" : "none";
            });

            currentPage = 1;
            renderTable();
        }

        // ======== LỌC THEO VAI TRÒ ========
        roleFilter.addEventListener("change", function () {
            currentRole = this.value;
            applyFilters();
        });

        // ======== PHÂN TRANG ========
        document.getElementById("prev").addEventListener("click", function () {
            if (currentPage > 1) {
                currentPage--;
                renderTable();
            }
        });

        document.getElementById("next").addEventListener("click", function () {
            const visibleRows = allRows.filter(row => row.style.display !== "none");
            const totalItems = visibleRows.length;
            const totalPages = Math.ceil(totalItems / itemsPerPage);

            if (currentPage < totalPages) {
                currentPage++;
                renderTable();
            }
        });

        // ======== XUẤT EXCEL ========
        document.getElementById("btnExportExcel").addEventListener("click", function () {
            const visibleRows = allRows.filter(row => row.style.display !== "none");
            if (visibleRows.length === 0) {
                alert("Không có dữ liệu để xuất!");
                return;
            }

            // Tạo HTML table để export
            let html = `
                <table border="1">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên Tài Khoản</th>
                            <th>Mật khẩu</th>
                            <th>Email</th>
                            <th>Loại Tài Khoản</th>
                        </tr>
                    </thead>
                    <tbody>
            `;

            visibleRows.forEach((row, index) => {
                const cells = row.cells;
                html += `
                    <tr>
                        <td>${index + 1}</td>
                        <td>${cells[1].innerText}</td>
                        <td>********</td>
                        <td>${cells[3].innerText}</td>
                        <td>${cells[4].innerText}</td>
                    </tr>
                `;
            });

            html += '</tbody></table>';

            // Tạo và tải file
            const blob = new Blob([html], { type: "application/vnd.ms-excel" });
            const url = URL.createObjectURL(blob);
            const a = document.createElement("a");
            a.href = url;
            a.download = "DanhSachTaiKhoan.xls";
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
        });

        // ======== NÚT THÊM TÀI KHOẢN ========
        document.getElementById("btnAdd").addEventListener("click", function () {
            // Reset form
            document.getElementById("editForm").reset();
            document.getElementById("editId").value = "";

            // Hiển thị modal
            const modal = new bootstrap.Modal(document.getElementById("editModal"));
            modal.show();
        });

        // ======== KHỞI TẠO BAN ĐẦU ========
        // Đảm bảo tất cả hàng đều hiển thị ban đầu
        allRows.forEach(row => row.style.display = "");
        renderTable();

        // Debug: Hiển thị tất cả các vai trò có trong bảng
        console.log("Tất cả vai trò trong bảng:");
        const allRoles = [...new Set(allRows.map(row => row.cells[4]?.innerText))];
        allRoles.forEach(role => {
            console.log(`"${role}" -> "${normalizeRole(role)}"`);
        });
    });
</script>