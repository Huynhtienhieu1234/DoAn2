@model IEnumerable<QuanLyDangKyNgayLD.Models.TaiKhoan>
@{
    ViewBag.Title = "Trang Tài Khoản";
    Layout = "~/Areas/Admin/Views/Shared/ViewShare.cshtml";
}
<link href="~/Areas/Content/adminpage.css" rel="stylesheet" type="text/css" />

<!-- THANH CÔNG CỤ -->
<nav class="navbar navbar-expand-lg toolbar shadow-sm mb-3">
    <div class="container-fluid p-0">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!-- Bên trái -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <button class="btn btn-outline-primary btn-sm me-2" id="btnAdd">
                        <i class="fa fa-plus me-1"></i> Thêm tài khoản
                    </button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-secondary btn-sm me-2" id="btnViewDeleted">
                        <i class="fas fa-trash-restore me-1"></i> Tài khoản đã xóa
                    </button>
                </li>
            </ul>

            <!-- Bên phải -->
            <form class="toolbar-flex align-items-center" role="search">
                <select id="roleFilter" class="form-select form-select-sm me-2 shadow-sm" style="min-width: 140px;">
                    <option value="">-- Lọc theo vai trò --</option>
                    <option value="Tất Cả">Tất cả</option>
                    <option value="SinhVien">Sinh viên</option>
                    <option value="LopPhoLaoDong">Lớp phó lao động</option>
                    <option value="QuanLy">Quản lý</option>
                    <option value="Admin">Admin</option>
                </select>

                <div class="input-group input-group-sm shadow-sm me-2" style="min-width: 180px;">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fa fa-search text-muted"></i>
                    </span>
                    <input type="text" id="searchBox" class="form-control border-start-0" placeholder="Tìm kiếm...">
                </div>


                <button class="btn btn-outline-success btn-sm shadow-sm" id="exportAllAccounts" type="button">
                    <i class="fa fa-file-excel me-1"></i> Xuất Excel
                </button>
            </form>
        </div>
    </div>
</nav>

<!-- BẢNG DỮ LIỆU -->

<div class="table-responsive shadow-sm rounded-3 bg-white p-2">
    <div id="loadingIndicator" style="display:none; text-align:center; margin:10px 0;">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
    </div>
    <table class="table table-bordered table-hover align-middle text-center mb-0">
        <thead class="table-light">
            <tr>
                <th width="6%">STT</th>
                <th>Tên Tài Khoản</th>
                <th>Email</th>
                <th>Loại Tài Khoản</th>
                <th width="22%" class="action-header">Tác vụ</th>
            </tr>
        </thead>
        <tbody id="accountTableBody">
            @if (Model != null && Model.Any())
            {
                var i = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td class="stt-cell">@i</td>
                        <td>@item.Username</td>
                        <td class="text-truncate" style="max-width:200px;" title="@item.Email">@item.Email</td>
                        <td>@(item.VaiTro?.TenVaiTro ?? "Chưa có vai trò")</td>
                        <td class="action-cell">
                            <button class="btn btn-sm btn-warning btn-edit me-1" title="Sửa"
                                    data-id="@item.TaiKhoan_id"
                                    data-username="@item.Username"
                                    data-email="@item.Email"
                                    data-roleid="@item.VaiTro_id"
                                    data-rolename="@(item.VaiTro?.TenVaiTro ?? "N/A")">
                                <i class="fas fa-edit"></i>
                            </button>


                            <button class="btn btn-sm btn-danger btn-delete me-1" title="Xóa"
                                    data-id="@item.TaiKhoan_id">
                                <i class="fas fa-trash"></i>
                            </button>

                            <button class="btn btn-sm btn-info btn-detail me-1 text-white" title="Chi tiết"
                                    data-id="@item.TaiKhoan_id">
                                <i class="fas fa-info-circle"></i>
                            </button>

                            <button class="btn btn-sm btn-secondary btn-reset" title="Đặt lại mật khẩu"
                                    data-id="@item.TaiKhoan_id">
                                <i class="fas fa-key"></i>
                            </button>
                        </td>
                    </tr>

                    i++;
                }
            }
            else
            {
                <tr class="no-data-row">
                    <td colspan="6" class="text-muted py-4">Không có dữ liệu</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- PHÂN TRANG -->
<div class="d-flex justify-content-between align-items-center mt-3">
    <div id="pagination" class="pagination-container">
        <button class="btn btn-secondary btn-sm me-1" id="prev">&lt;</button>
        <span id="pageNumbers"></span>
        <button class="btn btn-secondary btn-sm ms-1" id="next">&gt;</button>
    </div>
</div>


<!-- MODAL THÊM TÀI KHOẢN -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl"> <!-- rộng ngang -->
        <div class="modal-content shadow-lg border-0">
            <form id="createForm" method="post" action="@Url.Action("CreateAccountAjax", "Account", new { area = "Admin" })">
                @Html.AntiForgeryToken()

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold">
                        <i class="fas fa-user-plus me-2"></i> Thêm tài khoản mới
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body py-4">
                    <div class="row">
                        <!-- TÊN ĐĂNG NHẬP -->
                        <div class="col-md-6 mb-4">
                            <label for="createUsername" class="form-label fw-bold">
                                Tên đăng nhập <span class="text-danger">*</span>
                            </label>
                            <input type="text" name="Username" id="createUsername"
                                   class="form-control form-control-lg"
                                   placeholder="Nhập MSSV hoặc tên tài khoản"
                                   required maxlength="20" autocomplete="off" />
                            <div class="form-text text-muted">
                                <i class="fas fa-info-circle text-primary"></i>
                                Với <strong>Sinh viên</strong> hoặc <strong>Lớp phó lao động</strong>: nhập MSSV
                            </div>
                        </div>

                        <!-- EMAIL -->
                        <div class="col-md-6 mb-4">
                            <label for="createEmail" class="form-label fw-bold">
                                Email <span class="text-danger">*</span>
                            </label>
                            <input type="email" name="Email" id="createEmail"
                                   class="form-control form-control-lg"
                                   placeholder="abc@example.com"
                                   required maxlength="100" autocomplete="off" />
                        </div>

                        <!-- VAI TRÒ -->
                        <div class="col-md-6 mb-4">
                            <label for="createRole" class="form-label fw-bold">
                                Vai trò <span class="text-danger">*</span>
                            </label>
                            <select name="VaiTro_id" id="createRole" class="form-select form-select-lg" required>
                                <option value="">-- Chọn vai trò --</option>
                                <option value="1">Admin</option>
                                <option value="2">Quản lý</option>
                                <option value="3">Sinh viên</option>
                                <option value="4">Lớp phó lao động</option>
                            </select>
                        </div>

                 
                        <!-- MẬT KHẨU -->
                        <div class="col-md-6 mb-4 password-group">
                            <label for="createPassword" class="form-label fw-bold">
                                Mật khẩu <span class="text-danger">*</span>
                            </label>
                            <div class="input-group">
                                <input type="password" name="Password" id="createPassword"
                                       class="form-control form-control-lg"
                                       placeholder="Chỉ cần nhập khi chọn Admin hoặc Quản lý"
                                       minlength="6" autocomplete="new-password" />
                                <!-- Nút con mắt -->
                                <button class="btn btn-outline-secondary btn-lg border toggle-password" type="button">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <small class="text-success password-hint mt-2 d-block" style="display:none;">
                                <i class="fas fa-check-circle"></i> Mật khẩu mặc định = MSSV
                            </small>
                        </div>

                    </div>
                </div>

                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i> Hủy
                    </button>
                    <button type="submit" class="btn btn-success btn-lg px-5">
                        <i class="fas fa-save me-2"></i> Lưu tài khoản
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- Modal Chỉnh sửa -->
<div class="modal fade" id="editModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <form id="editForm" method="post" action="/Admin/Account/EditAjax">
                @Html.AntiForgeryToken()

                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="editModalLabel">
                        <i class="fa fa-edit me-2"></i> Chỉnh sửa tài khoản
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <!-- ID ẩn -->
                    <input type="hidden" id="editId" name="TaiKhoan_id" />

                    <!-- Tên tài khoản -->
                    <div class="mb-3" style="cursor:pointer">
                        <label for="editUsername" class="form-label fw-bold">Tên tài khoản</label>
                        <input type="text" class="form-control" id="editUsername" name="Username" required maxlength="50" />
                    </div>

                    <!-- Email -->
                    <div class="mb-3" style="cursor:pointer">
                        <label for="editEmail" class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control" id="editEmail" name="Email" required maxlength="100" />
                    </div>
     
                    <!-- Mật khẩu -->
                    <div class="mb-3">
                        <label for="editPassword" class="form-label fw-bold">Mật khẩu</label>
                        <div class="position-relative w-100">
                            <input type="password" class="form-control w-100" id="editPassword" name="Password"
                                   placeholder="Để trống nếu không đổi" minlength="6"
                                   style="padding-right: 40px;" />
                            <span class="position-absolute top-50 end-0 translate-middle-y me-3"
                                  style="cursor: pointer;" onclick="togglePassword()">
                                <i class="fa fa-eye" id="toggleEye"></i>
                            </span>
                        </div>
                    </div>



                    <!-- Vai trò -->
                    <div class="mb-3">
                        <label for="editRole" class="form-label fw-bold">Vai trò</label>
                        <select style="cursor:pointer" id="editRole" name="VaiTro_id" class="form-select" required>
                            <option value="">-- Chọn vai trò --</option>
                            <option value="1">Admin</option>
                            <option value="2">Quản lý</option>
                            <option value="3">Sinh viên</option>
                            <option value="4">Lớp phó lao động</option>
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fa fa-times me-1"></i> Hủy
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Chi tiết -->
<div class="modal fade" id="detailModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title"><i class="fa fa-info-circle me-2"></i>Thông tin tài khoản</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8" id="detailId"></dd>
                    <dt class="col-sm-4">Tên tài khoản</dt>
                    <dd class="col-sm-8" id="detailUsername"></dd>
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8" id="detailEmail"></dd>
                    <dt class="col-sm-4">Vai trò</dt>
                    <dd class="col-sm-8" id="detailRole"></dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-trash me-2"></i>Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fas fa-exclamation-triangle text-danger mb-3" style="font-size: 3.5rem;"></i>
                <h6 class="fw-bold" id="deleteConfirmText"></h6>
                <p class="text-muted" id="deleteAccountInfo"></p>
                <div class="alert alert-warning small">
                    <i class="fas fa-info-circle me-1"></i> Hành động này không thể hoàn tác!
                </div>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy bỏ</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="fas fa-trash me-1"></i> Xác nhận xóa
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Đặt lại mật khẩu -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title"><i class="fas fa-key me-2"></i>Đặt lại mật khẩu</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <div class="alert alert-info mb-4">
                    <div class="row small text-start">
                        <div class="col-5 fw-bold">Tên TK:</div>
                        <div class="col-7" id="resetCurrentUsername">-</div>
                        <div class="col-5 fw-bold">Email:</div>
                        <div class="col-7" id="resetCurrentEmail">-</div>
                        <div class="col-5 fw-bold">Vai trò:</div>
                        <div class="col-7" id="resetCurrentRole">-</div>
                    </div>
                </div>
                <i class="fas fa-key text-warning mb-3" style="font-size: 3rem;"></i>
                <h6 class="fw-bold">Mật khẩu mới sẽ là: <code class="fs-5">123456</code></h6>
                <small class="text-muted d-block mb-3">Người dùng nên đổi mật khẩu ngay sau khi đăng nhập</small>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy bỏ</button>
                <button type="button" class="btn btn-warning" id="confirmResetBtn">
                    <i class="fas fa-redo me-1"></i> Đặt lại mật khẩu
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Danh sách tài khoản đã xóa -->
<div class="modal fade" id="deletedAccountsModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title"><i class="fas fa-trash-restore me-2"></i>Danh sách tài khoản đã xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive" style="max-height: 450px;">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th class="text-center">STT</th>
                                <th>Tài khoản</th>
                                <th>Email</th>
                                <th class="text-center">Vai trò</th>
                                <th class="text-center">Ngày xóa</th>
                                <th class="text-center">Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody id="deletedAccountsTableBody">
                            <tr><td colspan="6" class="text-center text-muted py-4">Đang tải...</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnRefreshDeleted">
                    <i class="fas fa-sync-alt me-1"></i> Làm mới
                </button>
            </div>
        </div>
    </div>
</div>


<!-- ĐẶT CHÍNH XÁC VỊ TRÍ NÀY – PHẢI TRƯỚC Account.js -->
<script>
    window.adminUrls = {
        getDeletedAccounts: '@Url.Action("GetDeletedAccounts", "Account", new { area = "Admin" })',
        restoreAccount: '@Url.Action("RestoreAccount", "Account", new { area = "Admin" })'
    };
</script>
<script src="~/Areas/Content/jsAccount/FilterSearchAccounts.js"></script>
<script src="~/Areas/Content/jsAccount/ResetpasswordAcount.js"></script>
<script src="~/Areas/Content/jsAccount/DetailAcount.js"></script>
<script src="~/Areas/Content/jsAccount/DeleteAcount.js"></script>
<script src="~/Areas/Content/jsAccount/EditAcount.js"></script>
<script src="~/Areas/Content/jsAccount/Account.js"></script>
<script src="~/Areas/Content/Js/adminCommon.js"></script>
<script src="~/Areas/Content/jsAccount/ExportExcel.js"></script>