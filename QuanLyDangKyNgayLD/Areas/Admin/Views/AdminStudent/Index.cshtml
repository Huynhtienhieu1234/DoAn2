@model IEnumerable<QuanLyDangKyNgayLD.Models.SinhVien>
@{
    ViewBag.Title = "Quản lý Sinh viên";
    Layout = "~/Areas/Admin/Views/Shared/ViewShare.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/Areas/Content/css/AdminStudentRegister.css" />
}

<!-- THANH CÔNG CỤ -->
<nav class="navbar navbar-expand-lg toolbar shadow-sm mb-3">
    <div class="container-fluid p-0">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <!-- Bên trái -->
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <button class="btn btn-outline-primary btn-sm me-2" id="btnAdd">
                        <i class="fa fa-plus me-1"></i> Thêm sinh viên
                    </button>
                </li>
                <li class="nav-item">
                    <button class="btn btn-outline-secondary btn-sm me-2" id="btnViewDeleted">
                        <i class="fas fa-trash-restore me-1"></i> Sinh viên đã xóa
                    </button>
                </li>
            </ul>

            <!-- Bên phải -->
            <form class="toolbar-flex align-items-center" role="search">
                <select id="roleFilter" class="form-select form-select-sm me-2 shadow-sm" style="min-width: 140px; cursor:pointer">
                    <option value="">-- Lọc theo Khoa --</option>
                    <option value="TatCa">Tất cả</option>
                    <option value="CongNgheKyThuat">Công nghệ và kỹ thuật</option>
                    <option value="NgoaiNgu">Khoa Ngoại ngữ</option>
                    <option value="KinhTeLuat">Khoa Kinh tế - Luật</option>
                    <option value="NongNghiepTaiNguyenMoiTruong">Nông nghiệp, Tài nguyên và Môi trường</option>
                    <option value="VanHoaDuLichCongTacXaHoi">Văn hóa - Du lịch và Công tác xã hội</option>
                    <option value="SuPhamToanTin">Sư phạm Toán - Tin</option>
                    <option value="SuPhamKhoaHocTuNhien">Sư phạm Khoa học tự nhiên</option>
                    <option value="SuPhamKhoaHocXaHoi">Sư phạm Khoa học xã hội</option>
                    <option value="GiaoDucTieuHocMamNon">Giáo dục Tiểu học - Mầm non</option>
                    <option value="GiaoDucTheChatSuPhamNgheThuat">Giáo dục Thể chất - Sư phạm Nghệ thuật</option>
                </select>


                <div class="input-group input-group-sm shadow-sm me-2" style="min-width: 180px;">
                    <span class="input-group-text bg-white border-end-0">
                        <i class="fa fa-search text-muted"></i>
                    </span>
                    <input type="text" id="searchBox" class="form-control border-start-0" placeholder="Tìm kiếm...">
                </div>

                <button class="btn btn-outline-success btn-sm shadow-sm" id="exportAllAccounts" type="button">
                    <i class="fa fa-file-excel me-1"></i> Nhập Excel
                </button>
                <button class="btn btn-outline-success btn-sm shadow-sm" id="exportAllAccounts" type="button">
                    <i class="fa fa-file-excel me-1"></i> Xuất Excel
                </button>
            </form>
        </div>
    </div>
</nav>

<!-- BẢNG DỮ LIỆU -->
<div class="table-responsive shadow-sm rounded-3 bg-white p-2">
    <table class="table table-bordered table-hover align-middle text-center mb-0">
        <thead class="table-light">
            <tr>
                <th width="6%">STT</th>
                <th>MSSV</th>
                <th>Họ tên</th>
                <th>Giới tính</th>
                <th>Khoa</th>
                <th>Lớp</th>
                <th width="24%" class="action-header">Tác vụ</th>
            </tr>
        </thead>
        <tbody id="studentTableBody">
            <tr>
                <td colspan="7" class="text-center py-5">
                    <i class="fa fa-spinner fa-spin fa-2x"></i><br>
                    <small class="text-muted">Đang tải dữ liệu...</small>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<!-- PHÂN TRANG -->
<div class="d-flex justify-content-between align-items-center mt-3">
    <div id="paginationStudent" class="pagination-container">
        <button class="btn btn-secondary btn-sm me-1" id="prevStudent">&lt;</button>
        <span id="pageNumbersStudent"></span>
        <button class="btn btn-secondary btn-sm ms-1" id="nextStudent">&gt;</button>
    </div>
</div>

<!-- ====================== MODAL THÊM SINH VIÊN ====================== -->
<div class="modal fade" id="createStudentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <!-- modal-lg cho rộng vừa -->
        <div class="modal-content shadow-lg border-0">
            <form id="createStudentForm" method="post" action="/Admin/SinhVien/CreateAjax" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title fw-bold">
                        <i class="fas fa-user-plus me-2"></i> Thêm sinh viên mới
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body py-4">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">MSSV <span class="text-danger">*</span></label>
                            <input name="MSSV" type="text" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Họ tên <span class="text-danger">*</span></label>
                            <input name="HoTen" type="text" class="form-control form-control-sm" required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ngày sinh</label>
                            <input type="text" id="createNgaySinh" name="NgaySinh"
                                   class="form-control form-control-sm"
                                   placeholder="dd/MM/yyyy" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Giới tính</label>
                            <select name="GioiTinh" class="form-select form-select-sm">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Quê quán</label>
                            <input name="QueQuan" type="text" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Email</label>
                            <input type="email" name="Email" class="form-control form-control-sm" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">SĐT</label>
                            <input name="SoDienThoaiSinhVien" type="text" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Khoa</label>
                            <select id="createKhoa" name="Khoa" class="form-select form-select-sm">
                                <option value="">-- Chọn khoa --</option>
                                <option value="1">Công nghệ và kỹ thuật</option>
                                <option value="2">Khoa Ngoại ngữ</option>
                                <option value="3">Khoa Kinh tế - Luật</option>
                                <option value="4">Nông nghiệp, Tài nguyên và Môi trường</option>
                                <option value="5">Văn hóa - Du lịch và Công tác xã hội</option>
                                <option value="6">Sư phạm Toán - Tin</option>
                                <option value="7">Sư phạm Khoa học tự nhiên</option>
                                <option value="8">Sư phạm Khoa học xã hội</option>
                                <option value="9">Giáo dục Tiểu học - Mầm non</option>
                                <option value="10">Giáo dục Thể chất - Sư phạm Nghệ thuật</option>
                            </select>

                        </div>
                        <div class="col-12">
                            <label class="form-label fw-bold">Lớp</label>
                            <select id="createLop" name="Lop_id" class="form-select form-select-sm">
                                <option value="">-- Chọn lớp --</option>
                            </select>
                        </div>

                    </div>
                </div>

                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success px-5">
                        <i class="fas fa-save me-2"></i> Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- ====================== MODAL IMPORT EXCEL ====================== -->
<div class="modal fade" id="importExcelModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <form id="importForm" enctype="multipart/form-data">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title"><i class="fa fa-file-excel me-2"></i> Nhập danh sách sinh viên từ Excel</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center py-5">
                    <i class="fa fa-file-excel text-success mb-4" style="font-size: 4rem;"></i>
                    <p class="fw-bold">Chọn file Excel (.xlsx) để nhập dữ liệu</p>
                    <input type="file" name="excelFile" id="excelFileInput" accept=".xlsx, .xls" class="form-control form-control-lg" required />
                    <small class="text-muted d-block mt-3">
                        File mẫu: <a href="/Template/SinhVien_Template.xlsx" class="text-decoration-underline">Tải về tại đây</a>
                    </small>
                </div>
                <div class="modal-footer bg-light">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success btn-lg px-5" id="btnSubmitImport">
                        <i class="fa fa-upload me-2"></i> Nhập dữ liệu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- ====================== MODAL CHỈNH SỬA ====================== -->
<div class="modal fade" id="editStudentModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <!-- modal-lg cho rộng vừa -->
        <div class="modal-content shadow-lg">
            <form id="editStudentForm" method="post" action="/Admin/SinhVien/EditAjax">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title"><i class="fa fa-edit me-2"></i> Chỉnh sửa sinh viên</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="editMSSV" name="MSSV" />
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Họ tên</label>
                            <input type="text" id="editHoTen" name="HoTen" class="form-control form-control-sm" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ngày sinh</label>
                            <input type="text" id="editNgaySinh" name="NgaySinh" class="form-control form-control-sm" placeholder="dd/MM/yyyy" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Giới tính</label>
                            <select id="editGioiTinh" name="GioiTinh" class="form-select form-select-sm">
                                <option value="Nam">Nam</option>
                                <option value="Nữ">Nữ</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Quê quán</label>
                            <input type="text" id="editQueQuan" name="QueQuan" class="form-control form-control-sm" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Email</label>
                            <input type="email" id="editEmail" name="Email" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">SĐT</label>
                            <input type="text" id="editSDT" name="SoDienThoaiSinhVien" class="form-control form-control-sm" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Khoa</label>
                            <select id="editKhoa" name="Khoa" class="form-select form-select-sm">
                                <option value="">-- Chọn khoa --</option>
                                <option value="1">Công nghệ và kỹ thuật</option>
                                <option value="2">Khoa Ngoại ngữ</option>
                                <option value="3">Khoa Kinh tế - Luật</option>
                                <option value="4">Nông nghiệp, Tài nguyên và Môi trường</option>
                                <option value="5">Văn hóa - Du lịch và Công tác xã hội</option>
                                <option value="6">Sư phạm Toán - Tin</option>
                                <option value="7">Sư phạm Khoa học tự nhiên</option>
                                <option value="8">Sư phạm Khoa học xã hội</option>
                                <option value="9">Giáo dục Tiểu học - Mầm non</option>
                                <option value="10">Giáo dục Thể chất - Sư phạm Nghệ thuật</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label fw-bold">Lớp</label>
                            <select id="editLop" name="Lop_id" class="form-select form-select-sm">
                                <option value="">-- Chọn lớp --</option>
                                @foreach (var lop in ViewBag.LopList as List<QuanLyDangKyNgayLD.Models.Lop>)
                                {
                                    <option value="@lop.Lop_id">@lop.TenLop</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save me-1"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


<!-- ====================== MODAL CHI TIẾT ====================== -->
<div class="modal fade" id="detailStudentModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <!-- thêm modal-lg để rộng hơn -->
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fa fa-info-circle me-2"></i> Thông tin sinh viên
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">MSSV</dt>
                    <dd class="col-sm-8" id="detailMSSV"></dd>

                    <dt class="col-sm-4">Họ tên</dt>
                    <dd class="col-sm-8" id="detailHoTen"></dd>

                    <dt class="col-sm-4">Ngày sinh</dt>
                    <dd class="col-sm-8" id="detailNgaySinh"></dd>

                    <dt class="col-sm-4">Giới tính</dt>
                    <dd class="col-sm-8" id="detailGioiTinh"></dd>

                    <dt class="col-sm-4">Quê quán</dt>
                    <dd class="col-sm-8" id="detailQueQuan"></dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8" id="detailEmail"></dd>

                    <dt class="col-sm-4">SĐT</dt>
                    <dd class="col-sm-8" id="detailSDT"></dd>

                    <dt class="col-sm-4">Khoa</dt>
                    <dd class="col-sm-8" id="detailKhoa"></dd>

                    <dt class="col-sm-4">Lớp</dt>
                    <dd class="col-sm-8" id="detailLop"></dd>
                </dl>
            </div>

        </div>
    </div>
</div>


<!-- ====================== MODAL XÓA ====================== -->
<div class="modal fade" id="deleteStudentModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-xl">


        <div class="modal-content shadow-lg">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-trash me-2"></i> Xác nhận xóa sinh viên</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fas fa-exclamation-triangle text-danger mb-3" style="font-size: 3.5rem;"></i>
                <h6 class="fw-bold" id="deleteStudentText"></h6>
                <p class="text-muted">Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy bỏ</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteStudentBtn">Xác nhận xóa</button>
            </div>
        </div>
    </div>
</div>


<!-- ====================== MODAL DANH SÁCH ĐÃ XÓA ====================== -->
<div class="modal fade" id="deletedStudentsModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg">
            <div class="modal-header bg-secondary text-white">
                <h5 class="modal-title"><i class="fas fa-trash-restore me-2"></i> Sinh viên đã xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive" style="max-height: 500px;">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th>STT</th>
                                <th>MSSV</th>
                                <th>Họ tên</th>
                                <th>Lớp</th>
                                <th>Ngày xóa</th>
                                <th>Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody id="deletedStudentsTableBody">
                            <tr><td colspan="6" class="text-center text-muted py-4">Đang tải dữ liệu...</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Content/AdminStudentRegister/AdminStudentRegister.js"></script>
<script src="~/Areas/Content/Js/adminCommon.js"></script>