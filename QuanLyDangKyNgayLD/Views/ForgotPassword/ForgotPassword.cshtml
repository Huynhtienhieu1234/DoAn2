@model QuanLyDangKyNgayLD.Models.TaiKhoan

@{

    ViewBag.Title = "Quên Mật Khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/logoxoanen.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        .forgot-link {
            text-decoration: none;
            color: #0d6efd;
        }

            .forgot-link:hover {
                text-decoration: underline;
            }

        .logo {
            width: 120px; 
            margin-bottom: 10px;
        }
      
        input#Email {
            margin-top: 10px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body style="background: url('https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/Nen.png') no-repeat center center fixed; background-size: cover;">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow" style="min-width: 340px; max-width: 400px; background-color: white;">

            <!-- Logo -->
            <div class="text-center">
                <img src="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/LogoDHDT.png" alt="Logo" class="logo">
            </div>

            <!-- Tiêu đề -->
            <div class="text-center ">
                <h3 class="mt-2 text-primary">Quên Mật Khẩu</h3>
                <p class="text-muted">Nhập email đã đăng ký để đặt lại mật khẩu</p>
            </div>

            @using (Html.BeginForm("ForgotPassword", "ForgotPassword", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, "Email", new { @class = "fw-bold" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Nhập email của bạn" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary w-100">Gửi yêu cầu</button>

                <div class="text-center mt-2">
                    <a href="@Url.Action("Login", "Login")" class="forgot-link">
                        <i class="fa fa-arrow-left"></i> Quay lại đăng nhập
                    </a>
                </div>

                if (ViewBag.Message != null)
                {
                    <div class="alert alert-info text-center mt-3">
                        @ViewBag.Message
                    </div>
                }
            }

        </div>
    </div>
</body>
</html>
