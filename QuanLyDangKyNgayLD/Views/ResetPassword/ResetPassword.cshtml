@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/logoxoanen.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        .password-wrapper {
            position: relative;
        }

            .password-wrapper input {
                padding-right: 40px;
            }

            .password-wrapper .toggle-eye {
                position: absolute;
                top: 69%;
                right: 10px;
                transform: translateY(-50%);
                border: none;
                background: transparent;
                cursor: pointer;
                color: #666;
            }

        .logo {
            width: 120px;
            margin-bottom: 10px;
        }

        .forgot-link {
            text-decoration: none;
            color: #0d6efd;
        }

            .forgot-link:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body style="background: url('/Content/Nen.png') no-repeat center center fixed; background-size: cover;">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow" style="min-width: 340px; max-width: 400px; background-color: white;">
            <!-- Logo -->
            <div class="text-center">
                <img src="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/logoxoanen.png" alt="Logo" class="logo">
            </div>

            <!-- Tiêu đề -->
            <div class="text-center mb-3">
                <h3 class="mt-2 text-primary">Đặt lại mật khẩu</h3>
                <p class="text-muted">Nhập mật khẩu mới của bạn</p>
            </div>

            @using (Html.BeginForm("Index", "ResetPassword", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <!-- Token ẩn -->
                <input type="hidden" name="token" value="@ViewBag.Token" />

                <!-- Mật khẩu mới -->
                <div class="mb-3 password-wrapper">
                    <label for="newPassword" class="fw-bold">Mật khẩu mới</label>
                    <input type="password" name="newPassword" id="newPassword" class="form-control" placeholder="Nhập mật khẩu mới" required />
                    <button type="button" class="toggle-eye" onclick="togglePassword('newPassword','eyeIcon1')">
                        <i id="eyeIcon1" class="fa fa-eye"></i>
                    </button>
                </div>

                <!-- Xác nhận mật khẩu -->
                <div class="mb-3 password-wrapper">
                    <label for="confirmPassword" class="fw-bold">Xác nhận mật khẩu</label>
                    <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" required />
                    <button type="button" class="toggle-eye" onclick="togglePassword('confirmPassword','eyeIcon2')">
                        <i id="eyeIcon2" class="fa fa-eye"></i>
                    </button>
                </div>

                <button type="submit" class="btn btn-primary w-100">Xác nhận</button>

                <div class="text-center mt-2">
                    <a href="@Url.Action("Login", "Login")" class="forgot-link">
                        <i class="fa fa-arrow-left"></i> Quay lại đăng nhập
                    </a>
                </div>

                if (ViewBag.Message != null)
                {
                    <div class="alert alert-info text-center mt-3">
                        @ViewBag.Message
                    </div>
                }
            }
        </div>
    </div>

    <script>
        function togglePassword(inputId, iconId) {
            var pwd = document.getElementById(inputId);
            var eye = document.getElementById(iconId);
            if (pwd.type === "password") {
                pwd.type = "text";
                eye.classList.remove("fa-eye");
                eye.classList.add("fa-eye-slash");
            } else {
                pwd.type = "password";
                eye.classList.remove("fa-eye-slash");
                eye.classList.add("fa-eye");
            }
        }
    </script>
</body>
</html>
