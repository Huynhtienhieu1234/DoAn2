@model QuanLyDangKyNgayLD.Models.TaiKhoan

@{
    ViewBag.Title = "Đăng Nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="icon" type="image/png" href="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/logoxoanen.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        .password-wrapper {
            position: relative;
        }

            .password-wrapper input {
                padding-right: 40px;
            }

            .password-wrapper .toggle-eye {
                position: absolute;
                top: 72%;
                right: 6px;
                transform: translateY(-50%);
                border: none;
                background: transparent;
                cursor: pointer;
                color: #666;
            }

                .password-wrapper .toggle-eye:focus {
                    outline: none;
                    box-shadow: none;
                }

        .forgot-link {
            text-decoration: none;
            color: #0d6efd;
        }

            .forgot-link:hover {
                text-decoration: underline;
            }

        .logo {
            width: 120px; /* chỉnh kích thước logo */
            margin-bottom: 10px;
        }

        input#Username {
            margin-top: 6px;
        }

        input#password {
            margin-top: 6px;
        }
        /* Chặn icon reveal của Edge / Chrome */
        input::-ms-reveal,
        input::-ms-clear {
            display: none !important;
        }

    </style>
</head>


<body style="background: url('https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/Nen.png') no-repeat center center fixed; background-size: cover;">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow" style="min-width: 340px; max-width: 400px; background-color: white;">

            <!-- Logo -->
            <div class="text-center">

                <img src="https://cdn.jsdelivr.net/gh/Huynhtienhieu1234/UploadAnh/LogoDHDT.png" alt="Logo" class="logo">
            </div>

            <!-- Tiêu đề -->
            <div class="text-center mb-3">
                <h3 class="mt-2 text-primary">Đăng Nhập</h3>
            </div>

            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.LabelFor(m => m.Username, "Tài khoản", new { @class = "fw-bold" })
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Nhập tài khoản" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3 password-wrapper">
                    @Html.LabelFor(m => m.Password, "Mật khẩu", new { @class = "fw-bold" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Nhập mật khẩu", id = "password" })
                    <button type="button" class="toggle-eye" onclick="togglePassword()">
                        <i id="eyeIcon" class="fa fa-eye"></i>
                    </button>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary w-100">Đăng Nhập</button>

                <div class="text-center mt-2">
                    <a href="@Url.Action("ForgotPassword", "ForgotPassword")" class="forgot-link">Quên mật khẩu?</a>
                </div>
            }


        </div>
    </div>

    <script>
        function togglePassword() {
            var pwd = document.getElementById("password");
            var eye = document.getElementById("eyeIcon");
            if (pwd.type === "password") {
                pwd.type = "text";
                eye.classList.remove("fa-eye");
                eye.classList.add("fa-eye-slash");
            } else {
                pwd.type = "password";
                eye.classList.remove("fa-eye-slash");
                eye.classList.add("fa-eye");
            }
        }

        // Xóa biểu tượng "eye" mặc định mà trình duyệt tự thêm
        document.addEventListener("DOMContentLoaded", function () {
            const pwd = document.getElementById("password");

            if (pwd) {
                // Tắt autocomplete để trình duyệt không tự gợi ý + hiện icon
                pwd.setAttribute("autocomplete", "new-password");

                // Khi focus vào, tạm thời bật readonly -> trình duyệt sẽ không hiện icon
                pwd.addEventListener("focus", function () {
                    pwd.removeAttribute("readonly");
                });

                // Để tránh icon mắt xuất hiện, ban đầu set readonly
                pwd.setAttribute("readonly", true);
            }
        });
    </script>
</body>
</html>
